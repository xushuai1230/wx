}
.page_pic_h {
  margin-top: 20rpx;
  margin-left: 40rpx;
  width: 42px;
  height: 42px;
}

.page_pic_h2 {
  width: 100rpx;
  height: 100rpx;
}

.swiper-container{
  width: 100%;
  position: relative;  
}

.swiper_box {
  width: 100%;
  height:382.5rpx;
}

swiper-item image {
  width: 100%;
  display: inline-block;
  overflow: hidden;
  height:382.5rpx;
}
.swiper-container .dots{  
  position: absolute;  
  left: 0;  
  right: 0;  
  bottom: 20rpx;  
  display: flex;  
  justify-content: center;  
}  
.swiper-container .dots .dot{  
  margin: 0 8rpx;  
  width: 14rpx;  
  height: 14rpx;  
  background: #fff;  
  border-radius: 50%;  
  transition: all .6s;  
  opacity: .5;
}  
.swiper-container .dots .dot.active{  
  width: 14rpx;  
  opacity: 1;
}


