/* 发送验证码按钮隐藏，并展示倒数60s提示 */

.hide {
  display: none;
}

.show {
  display: block;
}

.v-pad-40 {
  padding: 40rpx;
  padding-bottom: 0rpx;
  padding-top: 25rpx;
}

.page-login-form0 {
  border-radius: 8rpx;
  position: relative;
  height: 100%;
  background: #eee;
}

.page-login-form {
  padding: 40rpx;
  padding-bottom: 0;
  border-radius: 8rpx;
  position: relative;
  background: #eee;
}

.page-login-form2 {
  padding: 40rpx;
  padding-bottom: 0rpx;
  padding-top: 20rpx;
  border-radius: 8rpx;
  position: relative;
  background: #f5f5f5;
  border-bottom: 2rpx solid #ddd;
  border-top: 2rpx solid #ddd;
}

.text-tip {
  font-size: 25rpx;
  color: #999;
  margin-top: 10rpx;
}

.v-reg {
  position: absolute;
  left: 30%;
  width: 40%;
  bottom: 180rpx;
}

.btn-reg {
  height: 70rpx;
  line-height: 70rpx;
  font-size: 25rpx;
}

.btn-send {
  height: 60rpx;
  line-height: 60rpx;
  font-size: 23rpx;
  margin: auto auto;
    position: absolute;
  right: 10rpx;
  top:0;
}

.v-sd {
  height: 60rpx;
  line-height: 60rpx;
    position: relative;
}

.input-code {
  line-height: 60rpx;
  height: 60rpx;
}

.txt-code {
  width: 110rpx;
  height: 60rpx;
  line-height: 60rpx;
}

.login-view-input {
  border: 1rpx solid #eee;
  margin: 10rpx;
  margin-left: 220rpx;
  padding-left: 10rpx;
  border-radius: 5rpx;
}

.login-btn {
  margin: 15rpx 0rpx 15rpx 0rpx;
  background-color: #54c84e;
  display: block;
  width: 100%;
  height: 82rpx;
  line-height: 82rpx;
  text-align: center;
  font-size: 32rpx;
  color: white;
}

.right-tip {
  margin-top: 550rpx;
  font-size: 28rpx;
}

.right-tip2 {
  font-size: 28rpx;
}

.text-tk {
  font-size: 26rpx;
  color: #286099
}

.name-tip{
  font-size: 26rpx;
  height: 55rpx;  
  line-height: 55rpx;  
  color: #999;
  padding-left: 0rpx;
}

.text-reg {
  font-size: 26rpx;
}

.v-more-tt {
  margin: 0rpx 40rpx;
  height: 30rpx;
  line-height: 30rpx;
  color: #333;
  display: flex;
  flex-direction: row;
}


.name-input-label{
  font-size: 35rpx;
  color: #333333;
  font-weight: 500;
  width: 20%;
  display: block;
  height: 100%;
}

.name-input-text{
  width: 80%;
  display: block;
}
